{
  "name": "cucumber-slices",
  "version": "0.1.0",
  "description": "Manage Features, Scenarios, Steps and Tags of your Cucumber projects",
  "main": "main.js",
  "scripts": {
    "postinstall": "pip install -r requirements.txt",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "https://github.com/sdesby/CucumberSlices",
  "keywords": [
    "cucumber",
    "cucumber-slices"
  ],
  "author": "sdesby",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^16.8.3",
    "electron": "^1.4.1",
    "load-json-file": "^2.0.0"
  },
  "dependencies": {
    "python-shell": "0.4.0",
    "load-json-file": "^2.0.0"
  },
   "build": {
    "appId": "com.sdesby.cucumberslices",
    "extraResources": [
      "python-scripts/*",
      "gherkin-examples/*",
      "resources/*"
    ]
  },
  "mac": {
    "extraResources": [
      "python-scripts/*",
      "gherkin-examples/*",
      "resources/*"
    ]
  }
}